<%= form_for Photo.new, html: { multipart: true } do |f| %>
  

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, id: :photo_description, rows: 10, cols: 60 %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
    <% if f.object.image? %>
    <%= image_tag f.object.image.thumb.url %>
      <%= f.label :remove_image %>
      <%= f.check_box :remove_image %> 
      <% end %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price, id: :pet_precio %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
