<article>
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
  <% end %>
 
  <h2>Tus reservaciones...</h2>
  <table>
 
    <%= render(@cart.line_items) %>
    <tfoot>
      <tr>
        <th colspan="2">Total:</td>
        <td class="price"><%= number_to_currency(cart.total_price) %></td>
      </tr>
    </tfoot>
  </table>

  <div class="actions">
  <%= button_to 'Eliminar compras.', cart,
                method: :delete,
                data: { confirm: '¿Estás seguro?' } %>
  <%= button_to 'Hacer mi compra.', new_order_path,
                method: :get,
                class: "checkout"%>
  </div>
 
<br>
<%= link_to 'Regresar', photos_path %>
</article>